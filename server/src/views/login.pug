doctype html
html
  head
    title Dashboard - Overview
    meta(charset='utf-8')
    meta(content='ie=edge', http-equiv='x-ua-compatible')
    meta(content='Dashboard Overview', name='keywords')
    meta(content='Tamerlan Soziev', name='author')
    meta(content='Company expense ', name='description')
    meta(content='width=device-width, initial-scale=1', name='viewport')
    link(href='favicon.png', rel='shortcut icon')
    link(href='apple-touch-icon.png', rel='apple-touch-icon')
    link(href='https://fonts.googleapis.com/css?family=Rubik:300,400,500', rel='stylesheet', type='text/css')
    link(href='/sciencewebassets/assets/bower_components/select2/dist/css/select2.min.css', rel='stylesheet')
    link(href='/sciencewebassets/assets/bower_components/bootstrap-daterangepicker/daterangepicker.css', rel='stylesheet')
    link(href='/sciencewebassets/assets/bower_components/dropzone/dist/dropzone.css', rel='stylesheet')
    link(href='/sciencewebassets/assets/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css', rel='stylesheet')
    link(href='/sciencewebassets/assets/bower_components/fullcalendar/dist/fullcalendar.min.css', rel='stylesheet')
    link(href='/sciencewebassets/assets/bower_components/perfect-scrollbar/css/perfect-scrollbar.min.css', rel='stylesheet')
    link(href='/sciencewebassets/assets/bower_components/slick-carousel/slick/slick.css', rel='stylesheet')
    link(href='/sciencewebassets/assets/css/main.css?version=4.3.0', rel='stylesheet')
    link(href='/sciencewebassets/assets/icon_fonts_assets/picons-thin/style.css', rel='stylesheet')
  body.auth-wrapper
    .all-wrapper.menu-side.with-pattern
      .auth-box-w
        .logo-w
          a(href='index.html')
            img(alt='', src='/sciencewebassets/assets/img/logo-big.png')
        h4.auth-header
          | Login To Science Web
        form(action='/login', method='POST')
          if message
            div(class='alert alert-danger', role='alert') #{message}
          .form-group
            label(for='') Email address
            input.form-control(type='email', placeholder='Enter your email', name='username')
            .pre-icon.os-icon.os-icon-user-male-circle
          .form-group
            label(for='') Password
            input.form-control(placeholder='Enter your password', type='password', name='password')
            .pre-icon.os-icon.os-icon-fingerprint
          .buttons-w
            button.btn.btn-primary Log in
            .form-check-inline
              label.form-check-label
                input.form-check-input(type='checkbox')
                | Remember Me
